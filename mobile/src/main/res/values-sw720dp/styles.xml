    <style name="custom_drawer" parent="Widget.AppCompat.DrawerArrowToggle">
        <!-- Customize Drawer Screen -->
        <item name="spinBars">true</item>
        <item name="color">@color/app_color</item>
        <item name="barLength">@dimen/drawer_barlength</item>
        <item name="gapBetweenBars">@dimen/drawer_gapbetweenbars</item>
        <item name="drawableSize">@dimen/drawer_drawablesize</item>
    </style>

    <style name="custom_tablayout" parent="Widget.Design.TabLayout">
        <item name="android:textSize">18sp</item>
        <item name="tabSelectedTextColor">@color/app_color</item>
        <item name="android:textColor">@color/app_color_25</item>
        <item name="android:fontFamily">fonts/MyriadHebrew-Bold.otf</item>
    </style>


    <style name="TextAppearance.MaterialCalendarWidget.Header"
        parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--<style name="TextAppearance.MaterialCalendarWidget.Date"
        parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mcv_text_date_light</item>
    </style>-->

    <style name="TextAppearance.MaterialCalendarWidget.WeekDay"
        parent="android:TextAppearance.DeviceDefault.Widget.TextView">
        <item name="android:textSize">12sp</item>
    </style>



    <style name="edittext">
        <item name="android:layout_marginLeft">@dimen/login_edittext_marginLeftAndRight</item>
        <item name="android:layout_marginRight">@dimen/login_edittext_marginLeftAndRight</item>
        <item name="android:textSize">@dimen/login_edittext_textSize</item>
        <item name="android:textColor">@color/black_70</item>
        <item name="android:textColorHint">@color/black_25</item>
        <item name="android:paddingLeft">@dimen/login_edittext_paddingLeftRight</item>
        <item name="android:paddingRight">@dimen/login_edittext_paddingLeftRight</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_edittext</item>
    </style>

</resources>
