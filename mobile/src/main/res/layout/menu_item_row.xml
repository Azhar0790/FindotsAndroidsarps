<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_item_height"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ImageView_menuItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/imageView_menuItem_marginLeft"
            />

        <TextView
            android:id="@+id/TextView_menuItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/textView_menuItem_marginLeft"
            android:layout_toRightOf="@+id/ImageView_menuItem"
            android:text="Menu Item"
            android:textColor="@color/black_70"
            android:textSize="@dimen/textView_menuItem_textSize" />

        <TextView
            android:id="@+id/textViewStopLocationUpdates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView_menuItem"
            android:layout_marginLeft="@dimen/textView_menuItem_marginLeft"
            android:layout_toRightOf="@+id/ImageView_menuItem"
            android:text="or stop updating locations"
            android:textColor="@color/black_70"
            android:textSize="12sp"
            android:visibility="gone"/>

    </RelativeLayout>
</RelativeLayout>