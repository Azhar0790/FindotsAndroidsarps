<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ImageView_menuItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/imageView_menuItem_marginLeft"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/TextView_menuItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/textView_menuItem_marginLeft"
            android:layout_toRightOf="@+id/ImageView_menuItem"
            android:text="Menu Item"
            android:textColor="@color/grey"
            android:textSize="@dimen/textView_menuItem_textSize" />

    </RelativeLayout>
</RelativeLayout>