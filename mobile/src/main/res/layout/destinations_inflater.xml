<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LinearLayout_destination"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/selector_white_bg"
        android:elevation="5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/TextView_assignedBy"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:drawableLeft="@mipmap/ic_launcher"
            android:drawablePadding="10dp"
            android:drawableStart="@mipmap/ic_launcher"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:text="Assigned by Sandra Jones 10 min ago"
            android:textColor="@color/grey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/TextView_mapLocationName"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/divider_color"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:text="Bridgetree Research Services"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_checkout"
            android:gravity="center">

            <Button
                android:id="@+id/Button_checkIncheckOut"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@null"
                android:drawableLeft="@mipmap/ic_launcher"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="Check Out"
                android:textAllCaps="false"
                android:textColor="@color/app_color"
                android:textSize="22sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>