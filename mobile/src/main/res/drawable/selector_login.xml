<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/app_color" android:startColor="@color/app_color" />
            <corners android:radius="30dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/app_color_80" android:startColor="@color/app_color_80" />
            <corners android:radius="30dp" />
        </shape>
    </item>
</selector>